@model ResultFeatureDTO
@{
	ViewData["Title"] = "FeatureList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Öne Çıkan Alan Güncelleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="FeatureID" />
							<label>Öne Çıkan Alan Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Öne Çıkan Alan Alt Başlığı</label>
							<input type="text" asp-for="SubTitle" class="form-control" />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<label>Resim URL</label>
							<input type="text" asp-for="ImageURL" class="form-control" />
							<br />
							<label>Video URL(embed)</label>
							<input type="text" asp-for="VideoURL" class="form-control" />
							<br />
							<button class="btn btn-primary">Öne Çıkan Alanı Oluştur</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</section>