@model ResultProductDTO
@{
	ViewData["Title"] = "ProductList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Ürün Ekleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Ürün Adı</label>
							<input type="text" asp-for="ProductName" class="form-control" />
							<br />
							<label>Ürün Fiyatı</label>
							<input type="text" asp-for="Price" class="form-control" />
							<br />
							<label>Ürün Kategorisi</label>
							<select asp-for="CategoryID" class="form-control" asp-items="(IEnumerable<SelectListItem>)ViewBag.categories"></select>
							<option value="">Seçiniz</option>
							<label>Ürün Görsel URL</label>
							<input type="text" asp-for="ImageURL" class="form-control" />
							<br />
							<label>Ürün Açıklaması</label>
							<textarea rows="5" asp-for="ProductDescription" class="form-control"></textarea>
							<br />
							<button class="btn btn-primary">Ürün Oluştur</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</section>

