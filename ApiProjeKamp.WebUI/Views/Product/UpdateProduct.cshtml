﻿@using ApiProjeKamp.WebUI.DTOs.ProductDTOs
@model UpdateProductDTO
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="UpdateProduct">
                            <input type="hidden" asp-for="ProductID" />

                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />

                            <label>Ürün Fiyatı</label>
                            <input type="text" asp-for="Price" class="form-control" />
                            <br />

                            <label>Ürün Kategorisi</label>
                            <select asp-for="CategoryID"
                                    class="form-control"
                                    asp-items="@(ViewBag.categories as IEnumerable<SelectListItem>)">
                                <option value="0">--Kategori Seçiniz--</option>
                            </select>
                            <br />

                            <label>Ürün Görsel URL</label>
                            <input type="text" asp-for="ImageURL" class="form-control" />
                            <br />

                            <label>Ürün Açıklaması</label>
                            <textarea class="form-control" asp-for="ProductDescription" rows="5"></textarea>
                            <br />

                            <button class="btn btn-primary">Ürünü Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>