@model GetTestimonialByIDDTO

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Müşteri Yorumu Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <label>Müşteri Adı Soyadı</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Müşteri Unvan</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Müşteri Yorumu</label>
                            <input type="text" asp-for="Comment" class="form-control" />
                            <br />
                            <label>Müşteri Görsel URL</label>
                            <input type="text" asp-for="ImageURL" class="form-control" />
                            <br />
                            <button class="btn btn-success">Yorumu Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



